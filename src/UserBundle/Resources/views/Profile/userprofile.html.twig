{% extends '::base.html.twig' %}

{% block body %}

    <section class="events">
        <header id="menu">
            <h3>Here is everything about you:</h3>
        </header>
    </section>

    <section class="event-show">
        <article>
            <section>
                <h1>
                  {{ user.username }}
                </h1>
                <br>
                <dl>
                    <dt>username:</dt>
                    <dd>{{ user.username }}</dd>

                    <dt>email adress:</dt>
                    <dd>{{ user.email }}</dd>
                    <br>
                    <hr>

                    <dt>tickets overall:</dt>
                    <dd>
                        <div class="progress">
                            <div class="progress-bar progress-bar progress-bar-striped" role="progressbar"
                                 aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:{{ overallPercent }}%">
                                {{ overallText }}
                            </div>
                        </div>
                        <b>{{ overallText }}</b>
                    </dd>

                    <hr>
                    <dt>tickets active:</dt>
                    <dd>
                        <div class="progress">
                            <div class="progress-bar progress-bar-warning progress-bar-striped active" role="progressbar"
                                 aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:{{ activePercent }}%">
                                {{ activeText }}
                            </div>
                        </div>
                        <b>{{ activeText }}</b>
                        <br><br>
                        {% for ticket in activeArray %}
                            <div class="alert alert-warning fade in">
                                <p>{{ ticket.dateCreation | date("Y-m-d")}}: {{ ticket.name }}, {{ ticket.numberPoints }} points</p>
                            </div>
                        {% endfor %}
                    </dd>

                    <hr>
                    <dt>tickets done:</dt>
                    <dd>
                        <div class="progress">
                            <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar"
                                 aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:{{ donePercent }}%">
                                {{ doneText }}
                            </div>
                        </div>
                        <b>{{ doneText }}</b>
                        <br><br>
                        {% for ticket in doneArray %}
                            <div class="alert alert-success fade in">
                                <p>{{ ticket.dateCreation | date("Y-m-d")}}: {{ ticket.name }}, {{ ticket.numberPoints }} points</p>
                            </div>
                        {% endfor %}
                    </dd>

                    <hr>
                    <dt>tickets overdue:</dt>
                    <dd>
                        <div class="progress">
                            <div class="progress-bar progress-bar-danger progress-bar-striped active" role="progressbar"
                                 aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:{{ overduePercent }}%">
                                {{ overdueText }}
                            </div>
                        </div>
                        <b>{{ overdueText }}</b>
                        <br><br>
                        {% for ticket in overdueArray %}
                        <div class="alert alert-danger fade in">
                            <p>{{ ticket.dateCreation | date("Y-m-d")}}: {{ ticket.name }}, {{ ticket.numberPoints }} points</p>
                        </div>
                        {% endfor %}
                    </dd>


                </dl>
            </section>
        </article>
    </section>

{% endblock %}