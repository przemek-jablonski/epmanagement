                <link rel="stylesheet" href= "{{ asset('bundles/ticket/css/event.css') }}"/>
                <link rel="stylesheet" href= "{{ asset('bundles/ticket/css/events.css') }}"/>
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
            {% endblock %}



