    {% block bootstrap_navbar_loop %}
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">

                <ul class="nav navbar-nav">
                    <li><a href="{{ path('ticketcrud_index') }}"><span class="glyphicon glyphicon-home"></span> easyProjectManagement 0.1</a></li>
                    {% if navbarLeft is defined %}
                        {% for element in navbarLeft %}
                                <li><a href={{ path( element.link ) }}><span class="{{ element.glyphicon }}"></span>{{ element.title }}</a></li>
                        {% endfor %}
                    {% endif %}

                    {% if helper is defined %}
                        <script type="text/javascript" src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.js') }}"></script>
                        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
                        <li><a data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-question-sign"></span>helper</a></li>
                        <div id="myModal" class="modal fade" role="dialog">
                            <div class="modal-dialog">

                                <div class="modal-content">
                                    <div class="alert alert-warning">
                                        <div class="modal-header">
                                            <div class="alert alert-success">
                                                <button type="button" class="close" data-dismiss="modal"></button>
                                                {#<h4 class="modal-title">helper: all tickets view.</h4>#}
                                                  <h4 class="modal-title">{{ helper.helpTitle }}</h4>
                                            </div>
                                        </div>

                                        <div class="modal-body">
                                            {{ helper.helpText | raw}}
                                        </div>

                                        <div class="modal-footer">
                                            <div class="alert alert-success">
                                                <button type="button" class="btn btn-success" data-dismiss="modal">got it!</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                </ul>

                <ul class="nav navbar-nav navbar-right">
                    {% if navbarRight is defined %}
                        {% for element in navbarRight %}
                            <li><a href={{ path( element.link ) }}><span class="{{ element.glyphicon }}"></span>{{ element.title }}</a></li>
                        {% endfor %}
                    {% endif %}
                </ul>

            </div>
        </nav>
    {% endblock %}



    {% block bootstrap_flashmessages %}
            {% if app.session.flashBag.has('flash_success') %}
                <div class="alert alert-success fade in">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {% for message in app.session.flashbag.get('flash_success') %}
                        {{ message }}
                    {% endfor %}
                </div>
            {% endif %}

            {% if app.session.flashBag.has('flash_error') %}
                <div class="alert alert-danger fade in">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {% for message in app.session.flashbag.get('flash_error') %}
                        {{ message }}
                    {% endfor %}
                </div>
            {% endif %}

            {% if app.session.flashBag.has('flash_warning') %}
                <div class="alert alert-danger fade in">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {% for message in app.session.flashbag.get('flash_warning') %}
                        {{ message }}
                    {% endfor %}
                </div>
            {% endif %}
    {% endblock %}







